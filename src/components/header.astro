<!-- CSS -->
<style>
    header {
        display: grid;
        grid-template-rows: var(--header-gap) 1fr;
        align-items: center;
        text-align: center;
        position: sticky;
        top: 0;
        left: 0;
        bottom: 0;
        height: 100vh;
        width: var(--header-gap);
        border-right: solid 1px var(--08);
        padding: 0;
        margin: 0;
        z-index: 100;
    }
    .h-wn {
        grid-row: 1;
        height: 100%;
        width: 100%;
        background: var(--accent);
        cursor: grab;
        transition: var(--fade-slow);
    }
    .wn {
        mask-image: url("/assets/wn.png");
        mask-size: contain;
        mask-repeat: no-repeat;
        mask-position: center;
        background: var(--08);
        image-rendering: pixelated;
        height: 100%;
        width: 100%;
        transition: var(--fade-slow);
    }
    .h-wn:hover {
        background: var(--wnt-orange);
    }
    .wn:hover {
        background: var(--wnt-blue);
    }
    .h-wn:active {
        background: var(--yellow);
        cursor: grabbing;
    }
    .wn:active {
        background: var(--blue-soft);
    }
    .h-nav {
        grid-row: 2;
        display: flex;
        flex-direction: column;
        height: 100%;
        width: 100%;
    }
    .h-nav a {
        writing-mode: vertical-lr;
    }
    .h-nav a,
    .plus {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        width: 100%;
        color: var(--08);
        font-size: var(--medium);
        border-top: solid 1px var(--08);
        transition: var(--fade);
    }
    .h-nav a:hover,
    .plus:hover {
        background: var(--yellow);
    }
    .h-nav a:active,
    .plus:active {
        background: var(--fc);
    }
    label.plus::after {
        content: "+";
    }
    .plus {
        max-height: var(--header-gap);
        cursor: pointer;
    }
    .plus.wrapper {
        max-width: var(--header-gap);
        border: none;
    }
    #plus-toggle {
        display: none;
    }
    #plus-toggle:checked ~ .plus-content {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
        transform: translateY(0);
        transition:
            transform 0.6s ease,
            opacity 0.6s ease,
            visibility 0s 0s;
    }
    #plus-toggle:checked ~ .plus::after {
        content: "Ã—";
    }
    .plus-content {
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
        transform: translateY(100%);
        display: flex;
        flex-direction: row;
        position: fixed;
        left: var(--header-gap);
        right: 0;
        bottom: 0;
        height: var(--header-gap);
        width: auto;
        background: var(--bg);
        border-top: solid 1px var(--08);
        transition:
            transform 0.6s ease,
            opacity 0.6s ease,
            visibility 0s 0.6s;
    }
    .plus-content a {
        writing-mode: horizontal-tb;
        border: none;
        border-right: solid 1px var(--08);
    }
    .plus-content a:last-child {
        border: none;
    }
</style>

<!-- HTML -->
<header>
    <div class="h-wn">
        <div class="wn" role="img" aria-label="WQON ðŸ‰ Pixel Dracologist"></div>
    </div>
    <nav class="h-nav">
        <a href="/" class="art">Art</a>
        <a href="/fonts" class="fonts">Fonts</a>
        <a href="/hire-me" class="hire-me">Hire Me</a>
        <a href="/about" class="about">About</a>
        <div class="plus wrapper">
            <input type="checkbox" id="plus-toggle" />
            <label for="plus-toggle" class="plus"></label>
            <div class="plus-content">
                <a href="/shop" class="shop">Shop</a>
                <a href="/blog" class="blog">Blog</a>
                <a href="/support" class="support">Support ðŸ–¤</a>
            </div>
        </div>
    </nav>
</header>
