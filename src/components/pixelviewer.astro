    <div class="pv-wrapper">
        <!-- ARTWORKS -->
        <div class="pv-artarea" id="P2">
            <div class="pv-metadata">
                <article>
                    <h1>Breeze of Skies</h1>
                    <p class="small">2025 â€¢ 210x297px, 6 colors</p>
                    <br />
                    <p class="medium">Text</p>
                </article>
            </div>
            <div class="pv-art"></div>
        </div>

        <div class="pv-switcher">
            <div class="pv-nav">
                <button class="pv-left">&lt;--- PREVIOUS ARTWORK</button>
                <button class="pv-right" type="button"
                    >NEXT ARTWORK ---&gt;</button
                >
            </div>
            <!-- PREVIEWS -->
            <div class="pv-preview-wrapper">
                <button class="pv-previews" id="P2preview"></button>
            </div>
        </div>
    </div>
</section>
