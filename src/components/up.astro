<!-- CSS -->
<style>
    .up {
        image-rendering: pixelated;
        height: 100%;
        transition: var(--fade-fast);
        pointer-events: auto;
        cursor: n-resize;
    }
    .up:hover {
        transform: scale(1.4);
    }
</style>

<!-- HTML -->
<img src="/assets/up.png" alt="Up!" class="up" />

<!-- JS -->
<script>
    document.querySelector(".up")!.addEventListener("click", () => {
        window.scrollTo({ top: 0, behavior: "smooth" });
    });
</script>
