---
import Up from "../components/up.astro";

const year = () => new Date().getFullYear();
const wn = "WQON";
---

<!-- CSS -->
<style>
    footer {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(var(--header-gap) * 2);
        width: 100%;
        background: var(--bg);
        color: var(--08);
        line-height: 1;
        border-top: solid 1px var(--08);
        overflow: hidden;
        padding: 0 var(--site-gap);
        margin: 0;
        margin-top: 0;
        z-index: 98;
    }
    footer p {
        padding: 0;
        margin: 0;
    }

    .f-wrapper {
        display: flex;
        flex-direction: row;
        width: 100%;
    }
    .f-left {
        flex: 1;
        display: flex;
        justify-content: left;
        align-items: center;
        text-align: left;
    }
    .f-right {
        flex: 1;
        display: flex;
        justify-content: right;
        align-items: center;
        text-align: right;
        gap: calc(var(--header-gap) / 4);
    }
    .f-right p {
        flex: 1;
    }
    .f-right .up {
        flex: 1;
    }

    /* RESPONSIVE */
    /* Phone. */
    @media (min-width: 0px) and (max-width: 600px) {
        footer {
            height: calc(var(--header-gap) * 3);
        }
        .f-wrapper {
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: var(--gap);
        }
        .f-left,
        .f-right {
            text-align: center;
        }
        .f-right {
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }
    }
</style>

<!-- HTML -->
